.chat__main
  .main__header
    .main__header__left__box
      .main__header__left__box__current__group
        = @group.name
        .main__header__left__box__member__list
          Member 
          = current_user.name
    .main__header__edit__btn
      = link_to edit_group_path(@group) do
        Edit
  .messages
    .message
      .message__upper__info
        .message__upper__info__talker
          = render @messages


  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: ' type a message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          %i.fa.fa-image
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'
        
